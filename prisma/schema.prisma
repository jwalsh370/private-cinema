// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Video {
  id            String   @id @default(cuid())
  s3Key         String   @unique
  originalName  String
  fileSize      Int
  category      String
  fileType      String
  
  // Parsed metadata from filename
  parsedTitle   String
  parsedYear    Int?
  parsedQuality String?
  parsedSource  String?
  
  // TMDB metadata
  tmdbId        Int?
  tmdbMetadata  Json?
  
  // Status tracking
  metadataStatus MetadataStatus @default(PENDING)
  uploadDate    DateTime @default(now())
  matchedAt     DateTime?
  
  @@map("videos")
}

enum MetadataStatus {
  PENDING
  MATCHED
  MANUAL
  ERROR
}
